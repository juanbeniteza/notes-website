---
import '../styles/global.css';
import Footer from '../components/Footer.astro'; // Re-import Footer
import SEO from '../components/SEO.astro'; // Import the SEO component
import Header from '../components/Header.astro';

interface Props {
	title?: string; // Make title optional as SEO component has a default
	description?: string; // Add description prop
	// Add other SEO props you want to pass from pages
	image?: string;
	noindex?: boolean;
	canonicalURL?: URL | string;
}

const { title, description, image, noindex, canonicalURL } = Astro.props;
---

<!doctype html>
<html lang="en" class="h-full">
	<head>
		<SEO
			title={title}
			description={description}
			image={image}
			noindex={noindex}
			canonicalURL={canonicalURL}
		/>
		<meta name="generator" content={Astro.generator} />
	</head>
	<body class="h-full flex flex-col">
		<main class="max-w-[52rem] mx-auto px-4 py-12 w-full flex-grow">
			<Header />
			<slot />
		</main>

		<Footer />
	</body>
</html>
